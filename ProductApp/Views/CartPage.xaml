<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ProductApp.Views.CartPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ProductApp.ViewModels"
             Title="Koszyk">

    <ContentPage.BindingContext>
        <viewmodels:CartViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Lista produktów w koszyku -->
        <CollectionView Grid.Row="0" 
                        ItemsSource="{Binding CartItems}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="LightGray" 
                            StrokeThickness="1" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Grid.Row="0"
                                   Text="{Binding ProductName}" 
                                   FontAttributes="Bold" 
                                   FontSize="16" />

                            <Label Grid.Column="0" Grid.Row="1"
                                   Text="{Binding ProductPrice, StringFormat='Cena: {0:C}'}" />

                            <StackLayout Grid.Column="0" Grid.Row="2" 
                                         Orientation="Horizontal">
                                <Label Text="Iloœæ:" />
                                <Label Text="{Binding Quantity}" 
                                       FontAttributes="Bold" />
                                <Button Text="Zmieñ" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CartViewModel}}, Path=UpdateQuantityCommand}"
                                        CommandParameter="{Binding .}"
                                        FontSize="12" />
                            </StackLayout>

                            <Label Grid.Column="1" Grid.Row="0"
                                   Text="{Binding TotalPrice, StringFormat='{0:C}'}" 
                                   FontAttributes="Bold" 
                                   FontSize="16" 
                                   VerticalOptions="Center" />

                            <Button Grid.Column="2" Grid.Row="0"
                                    Text="Usuñ" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CartViewModel}}, Path=RemoveFromCartCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Red" 
                                    TextColor="White" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" 
                             VerticalOptions="Center">
                    <Label Text="Koszyk jest pusty" 
                           FontSize="18" 
                           HorizontalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Podsumowanie -->
        <Border Grid.Row="1" 
                Stroke="Gray" 
                StrokeThickness="1" 
                Margin="10" 
                Padding="15">
            <StackLayout>
                <Label Text="{Binding TotalItems, StringFormat='Produktów: {0}'}" 
                       FontSize="16" />
                <Label Text="{Binding TotalPrice, StringFormat='£¹cznie: {0:C}'}" 
                       FontSize="18" 
                       FontAttributes="Bold" />

                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center" 
                             Spacing="10" 
                             Margin="10,0,0,0">
                    <Button Text="Wyczyœæ koszyk" 
                            Command="{Binding ClearCartCommand}" 
                            BackgroundColor="Orange" />
                    <Button Text="Z³ó¿ zamówienie" 
                            BackgroundColor="Green" 
                            TextColor="White" />
                </StackLayout>
            </StackLayout>
        </Border>
    </Grid>
</ContentPage>